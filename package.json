{
  "name": "tracer",
  "displayName": "Tracer",
  "description": "An intelligent co-pilot for your everyday building and refactoring.",
  "icon": "resources/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tracer.showTracer",
        "title": "Show Tracer",
        "category": "Tracer AI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tracerSidebar",
          "title": "Tracer",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "tracerSidebar": [
        {
          "type":"webview",
          "id": "tracerView",
          "name": "Task Planner"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}